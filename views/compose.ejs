<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label for="input1" class="form-label">Title</label>
    <input type="text" required name="postTitle" class="form-control" id="input1">
  </div>
  <div class="mb-3">
    <label for="textarea1" class="form-label">Post</label>
    <textarea name="postContent" required class="form-control" id="textarea1" rows="3"></textarea>
  </div>
  <br>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>

</form>


<%- include("partials/footer") -%>
